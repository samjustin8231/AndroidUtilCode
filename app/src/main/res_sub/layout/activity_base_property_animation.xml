<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_16"
    android:paddingRight="@dimen/spacing_16">

    <!--<Button-->
    <!--style="@style/BtnFont"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:onClick="flashlightClick"-->
    <!--android:text="@string/demo_flashlight"-->
    <!--/>-->

    <Button
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="alphaClick"
        android:text="alpha" />

    <Button
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="rotateClick"
        android:text="rotate" />

    <Button
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="transClick"
        android:text="位移" />

    <Button
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="scaleClick"
        android:text="scale" />

    <Button
        style="@style/WideBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="animationSetClick"
        android:text="组合动画" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/img_lena"/>
</LinearLayout>
